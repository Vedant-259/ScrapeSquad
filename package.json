{
  "name": "website-scraping-app",
  "version": "1.0.0",
  "description": "A legal web scraping application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-client": "cd client && npm install && npm install -D vite",
    "build-client": "cd client && npm run build",
    "install-playwright": "npx playwright install chromium",
    "build": "npm install && npm run install-playwright && npm run install-client && npm run build-client"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "node-fetch": "^3.3.0",
    "nodemailer": "^6.10.0",
    "playwright": "^1.31.2",
    "robots-parser": "^3.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
}
